# =============================================================================
# TRAKYA SOLAR - PRODUCTION ENVIRONMENT TEMPLATE
# =============================================================================
# Bu dosyayı production deployment sırasında kullanın
# Değerleri Vercel dashboard'da Environment Variables bölümünde ayarlayın

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME="Trakya Solar"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# DATABASE CONFIGURATION - PLANETSCALE
# =============================================================================
DATABASE_URL="mysql://[username]:[password]@[host].connect.psdb.cloud/[database]?sslaccept=strict"

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET="production-secret-min-32-characters-long"
NEXTAUTH_URL="https://your-domain.com"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_production_google_maps_api_key"

# Email Service (Resend)
RESEND_API_KEY="your_production_resend_api_key"
SMTP_FROM="noreply@your-domain.com"
SMTP_FROM_NAME="Trakya Solar"

# Weather API
WEATHER_API_KEY="your_production_weather_api_key"
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# Exchange Rates
TCMB_API_URL="https://www.tcmb.gov.tr/kurlar/today.xml"

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================
IYZIPAY_API_KEY="your_production_iyzipay_api_key"
IYZIPAY_SECRET_KEY="your_production_iyzipay_secret_key"
IYZIPAY_BASE_URL="https://api.iyzipay.com"

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
SENTRY_ORG="your_sentry_org"
SENTRY_PROJECT="trakya-solar"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# =============================================================================
# RATE LIMITING
# =============================================================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"

# =============================================================================
# FILE STORAGE
# =============================================================================
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENCRYPTION_KEY="your-32-character-encryption-key-prod"
JWT_SECRET="your-production-jwt-secret-for-apis"

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
# Hide test accounts in production
SHOW_TEST_ACCOUNTS=false
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# =============================================================================
# VERCEL ENVIRONMENT (Automatically set by Vercel)
# =============================================================================
# VERCEL="1"
# VERCEL_ENV="production"
# VERCEL_URL="your-app.vercel.app"