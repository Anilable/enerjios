# =============================================================================
# TRAKYA SOLAR - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Bu dosyayı kopyalayarak .env.local (development) veya .env.production oluşturun
# ASLA gerçek değerleri bu dosyaya koymayın!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Trakya Solar"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PlanetScale Database URL (Production)
DATABASE_URL="mysql://your_username:your_password@your_host.connect.psdb.cloud/your_database?sslaccept=strict"

# Local Development Database (SQLite)
# DATABASE_URL="file:./dev.db"

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET="your-super-secret-jwt-token-here-min-32-chars"
NEXTAUTH_URL="https://your-production-domain.com"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Email Service (Resend)
RESEND_API_KEY="your_resend_api_key"
SMTP_FROM="noreply@your-domain.com"
SMTP_FROM_NAME="Trakya Solar"

# Weather API
WEATHER_API_KEY="your_weather_api_key"
WEATHER_API_URL="https://api.openweathermap.org/data/2.5"

# Exchange Rates API
TCMB_API_URL="https://www.tcmb.gov.tr/kurlar/today.xml"

# =============================================================================
# PAYMENT INTEGRATION
# =============================================================================
# IyzIPay Settings
IYZIPAY_API_KEY="your_iyzipay_api_key"
IYZIPAY_SECRET_KEY="your_iyzipay_secret_key"
IYZIPAY_BASE_URL="https://api.iyzipay.com"  # Production
# IYZIPAY_BASE_URL="https://sandbox-api.iyzipay.com"  # Sandbox

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry Error Monitoring
SENTRY_DSN="your_sentry_dsn_url"
SENTRY_ORG="your_sentry_org"
SENTRY_PROJECT="your_sentry_project"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# =============================================================================
# RATE LIMITING
# =============================================================================
# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL="your_upstash_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"

# =============================================================================
# FILE STORAGE
# =============================================================================
# Cloudinary or similar service for images
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Encryption key for sensitive data
ENCRYPTION_KEY="your-32-character-encryption-key"

# JWT Secret for API tokens
JWT_SECRET="your-jwt-secret-for-api-tokens"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# Show test accounts on login page (development only)
SHOW_TEST_ACCOUNTS=true

# Database debugging
# PRISMA_LOG_LEVEL="query,info,warn,error"

# Next.js debugging
# DEBUG=true

# Disable telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
# Build optimization
ANALYZE=false

# =============================================================================
# VERCEL SPECIFIC
# =============================================================================
# These are automatically set by Vercel, but can be overridden
# VERCEL="1"
# VERCEL_ENV="production"
# VERCEL_URL="your-app.vercel.app"