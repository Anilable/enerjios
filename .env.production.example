# Production Environment Variables for Trakya Solar
# Copy this to .env.production and fill in the actual values

# Database
DATABASE_URL="postgresql://username:password@hostname:5432/trakyasolar_prod"
POSTGRES_PRISMA_URL="postgresql://username:password@hostname:5432/trakyasolar_prod?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgresql://username:password@hostname:5432/trakyasolar_prod"

# NextAuth.js
NEXTAUTH_SECRET="your-super-secret-key-for-production-minimum-32-chars"
NEXTAUTH_URL="https://trakyasolar.com"

# Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="pk.your_production_mapbox_token"

# Email Service (Resend or SendGrid)
RESEND_API_KEY="re_your_production_resend_key"
EMAIL_FROM="noreply@trakyasolar.com"
EMAIL_REPLY_TO="support@trakyasolar.com"

# Payment Provider (İyzico)
IYZICO_API_KEY="your_production_iyzico_api_key"
IYZICO_SECRET_KEY="your_production_iyzico_secret_key"
IYZICO_BASE_URL="https://api.iyzipay.com"

# File Upload (AWS S3)
AWS_S3_REGION="eu-west-1"
AWS_S3_BUCKET_NAME="trakyasolar-production"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"

# Monitoring & Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-YOUR_GA_MEASUREMENT_ID"
NEXT_PUBLIC_HOTJAR_ID="your_hotjar_id"

# API Rate Limiting
UPSTASH_REDIS_URL="redis://your-upstash-redis-url"
UPSTASH_REDIS_TOKEN="your-upstash-redis-token"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PAYMENT="true"
NEXT_PUBLIC_ENABLE_EMAIL="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# Turkish Banking APIs (Mock in development)
AKBANK_API_KEY="your_akbank_api_key"
ISBANK_API_KEY="your_isbank_api_key"
GARANTI_API_KEY="your_garanti_api_key"

# Government APIs
YEKDEM_API_KEY="your_yekdem_api_key"
KOSGEB_API_KEY="your_kosgeb_api_key"
TKDK_API_KEY="your_tkdk_api_key"

# SMS Provider (Turkish - Netgsm/İletimerkezi)
SMS_USERNAME="your_sms_username"
SMS_PASSWORD="your_sms_password"
SMS_SENDER="TRAKYASOLAR"

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID="your_whatsapp_phone_id"
WHATSAPP_ACCESS_TOKEN="your_whatsapp_access_token"

# Domain Configuration
NEXT_PUBLIC_DOMAIN="trakyasolar.com"
NEXT_PUBLIC_API_URL="https://trakyasolar.com/api"

# CDN Configuration
NEXT_PUBLIC_CDN_URL="https://cdn.trakyasolar.com"

# Legal & Compliance
KVKV_CONSENT_API="https://api.kvkv-consent-service.com"
GDPR_COMPLIANCE="enabled"